<h1 class="display-4 p-2">Add Cabin</h1>

<div class="row">
  <div class="col-4">
    <%= form_with(url: ship_cabins_path(@ship), model: @cabin, local: true) do |form| %>

      <%= render 'errors', object: @cabin %>

      <div class="form-group">
        <%= form.label :room %>
        <%= form.text_field :room, id: :cabin_room, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :level %>
        <%= form.text_field :level, id: :cabin_level, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
  <div class="col-8"></div>
</div>